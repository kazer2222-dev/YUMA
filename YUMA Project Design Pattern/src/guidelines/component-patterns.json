{
  "componentPatterns": {
    
    "button": {
      "variants": {
        "primary": {
          "background": "#4353FF",
          "color": "white",
          "hover": "opacity-90"
        },
        "ghost": {
          "background": "transparent",
          "hover": "#1E1F24"
        },
        "outline": {
          "background": "transparent",
          "border": "1px solid #1E1F24",
          "hover": "#1E1F24"
        }
      },
      "sizes": {
        "sm": { "height": "2rem", "padding": "0.75rem" },
        "md": { "height": "2.25rem", "padding": "1rem" },
        "lg": { "height": "2.5rem", "padding": "1.5rem" }
      }
    },
    
    "card": {
      "background": "#11121A",
      "borderRadius": "0.5rem",
      "padding": "0.75rem",
      "hover": "#1A1B20",
      "transition": "all 150ms ease"
    },
    
    "input": {
      "background": "#1A1B20",
      "border": "1px solid #1E1F24",
      "borderRadius": "0.5rem",
      "height": "2.25rem",
      "padding": "0.75rem",
      "color": "#E4E5E7",
      "placeholder": "#7D8089",
      "focus": {
        "outline": "2px solid #4353FF",
        "outlineOffset": "2px"
      }
    },
    
    "badge": {
      "borderRadius": "0.25rem",
      "padding": "0.125rem 0.5rem",
      "fontSize": "0.75rem",
      "fontWeight": 500
    },
    
    "avatar": {
      "sizes": {
        "sm": "2rem",
        "md": "2.5rem",
        "lg": "3rem"
      },
      "background": "#4353FF",
      "color": "white",
      "borderRadius": "9999px"
    },
    
    "navigationItem": {
      "padding": "0.625rem 1rem",
      "borderRadius": "0.5rem",
      "gap": "0.75rem",
      "iconSize": "1.25rem",
      "states": {
        "default": {
          "background": "transparent",
          "color": "#E4E5E7"
        },
        "hover": {
          "background": "#1A1B20"
        },
        "active": {
          "background": "#1A1B20",
          "borderLeft": "2px solid #4353FF"
        }
      }
    },
    
    "tab": {
      "padding": "0.375rem 0.75rem",
      "borderRadius": "0.25rem",
      "gap": "0.5rem",
      "iconSize": "1rem",
      "states": {
        "inactive": {
          "background": "transparent",
          "color": "#7D8089"
        },
        "hover": {
          "background": "#1E1F24",
          "color": "#E4E5E7"
        },
        "active": {
          "background": "#4353FF",
          "color": "white"
        }
      }
    }
  }
}
